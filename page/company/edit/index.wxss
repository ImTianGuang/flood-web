@import "../../../wxSearchView/wxSearchView.wxss";
@import "../../common/index.wxss";
@import "../../common/lib/weui.wxss";

.ginput, textarea[class=ginput] {
    border: 1px solid #D1D1D1;
    width: 10rem;
    padding: 0.25rem;
    vertical-align: middle;
    display: inline-block;
    height:16px;
line-height:16px;
font-size:14px;
}

.ginput-group {
    display: inline-block;
    width: 100%;
    margin-top: 2px;
    height: 16px;
}

.weui-search-bar {
  position:relative;
padding:8px 10px;
display:-webkit-box;
display:-webkit-flex;
display:flex;
box-sizing:border-box;
background-color:#d7d6dc;
border-top:1rpx solid #d7d6dc;
border-bottom:1rpx solid #d7d6dc;
}

.weui-search-bar__form {
position:relative;
-webkit-box-flex:1;
-webkit-flex:auto;
flex:auto;
border-radius:5px;
background:#fff;
border:1rpx solid #e6e6ea;
}

.weui-search-bar__cancel-btn {
  margin-left:10px;
line-height:28px;
color:rgba(255, 255, 255, 1);
font-size:16px;
white-space:nowrap;
}

.weui-search-bar__box{
  position:relative;
padding-left:30px;
padding-right:30px;
width:100%;
box-sizing:border-box;
z-index:1;
}

.my-navigator-box-show {
opacity:1;
transform:translateY(0);
position:relative;
background-color:#F8F8F8;
line-height:1.41176471;
font-size:34rpx;
transition:.3s;
display: flex;
height: auto;
}
.my-navigator-box {
opacity:0;
position:relative;
background-color:#d7d6dc;
line-height:1.41176471;
font-size:34rpx;
transform:translateY(-50%);
transition:.3s;
display: flex;
height: auto;
}

.text-for-input {
margin-top:.77em;
margin-bottom:.3em;
padding-left:15px;
padding-right:15px;
height: 15px;
line-height: 15px;
color:#999999;
font-size:14px;
vertical-align:middle;
}

.my-input {
margin-top:.15em;
margin-bottom: .15em;
margin-right: .77em;
margin-left:.5em;
padding-left: .5em;
width: 263px;
border-radius: 5px 5px 5px 5px;
color: rgba(56, 56, 56, 1);
font-size: 14px;
text-align: left;
font-family: PingFang SC;
border: 1px solid #E0E0E0;
min-height:1.4rem;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
height: 2em;
}

.my-input-l {
margin-top:.15em;
margin-bottom: .15em;
padding-right:15px;
padding-left: 15px;
color:rgba(56, 56, 56, 1);
font-size:14px;
width:7em;
height: 2em;
overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}