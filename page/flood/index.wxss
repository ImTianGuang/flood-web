.select-l {
    width: 50%;
    font-size: 18px;
    line-height: 42px;
    height: 42px;
    overflow: hidden;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #212121;
    text-align: center;
}

.select-r {
    width: 50%;
    float: right;
    font-size: 18px;
    line-height: 42px;
    height: 42px;
    overflow: hidden;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #212121;
    text-align: center;
}

