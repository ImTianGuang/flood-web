@import "../common/index.wxss";

.first-block{
width: 100%;
height: 151px;
text-align: center;
}
.first-block-banner{
  width: 100%;
height: 151px;
}
.second-block{
width: 100%;
height: 45px;
  background: #FFFFFF;
    display: inline-block;
}
.second-block-left{
  top: 8px;
left: 16px;
width: 61px;
height: 45px;
line-height: 22px;
color: rgba(254, 36, 70, 1);
font-size: 15px;
text-align: left;
font-family: -apple-system;
position: relative;
display: inline-block;
}

.second-block-right{
  top: 8px;
left: 80px;
width: 209px;
height: 45px;
line-height: 23px;
color: rgba(90, 90, 90, 1);
font-size: 16px;
text-align: left;
font-family: -apple-system;
position: relative;
display: inline-block;
}

.third-block{
  width: 100%;
  height: 270px;
  line-height: 20px;
  text-align: center;
  display: inline-block;
}

.third-block-item{
  width: 49%;
  height: 90px;
  line-height: 20px;
  text-align: center;
  display: inline-block;
  background: #FFFFFF;
  margin:1px;
}

.third-block-halfItem{
  vertical-align: top;
  width: 50%;
  height: 90px;
  line-height: 20px;
  text-align: center;
  display: inline-block;
  background: #FFFFFF;
  position: relative;
}
.third-block-item-name{
  margin-top: 1.8em;
margin-left: 8px;
line-height: 23px;
color: rgba(208, 176, 148, 1);
font-size: 16px;
text-align: left;
font-family: -apple-system;
display: inline-block;
position: relative;
}

.third-block-item-desc{
 margin-left: 8px;
width: 49px;
height: 30px;
line-height: 17px;
color: rgba(163, 163, 163, 1);
font-size: 10px;
text-align: left;
font-family: -apple-system;
display: inline-block;
position: relative;
}

.third-block-item-icon{
width: 60px;
height: 60px;
border-radius: 0px;
background-color: rgba(255, 255, 255, 0);
display: inline-block;
position: relative;
margin:15px;
}